<!DOCTYPE html>
<html>
  <head>
    <title>Dischord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.favicon = "<%= image_url('favicon.svg') %>";
      window.authBackground = "<%= image_url('auth-background.jpg') %>";
      window.splashFloatBomb = "<%= image_url('splash-float-bomb.svg') %>";
      window.splashFloatCoin = "<%= image_url('splash-float-coin.svg') %>";
      window.splashFloatDisk = "<%= image_url('splash-float-disk.svg') %>";
      window.splashFooterBackground = "<%= image_url('splash-footer-background.svg') %>";
      window.splashHeaderGithubLogo = "<%= image_url('splash-header-github-logo.svg') %>";
      window.splashHeaderLabel = "<%= image_url('splash-header-label.svg') %>";
      window.splashHeaderLogo = "<%= image_url('splash-header-logo.svg') %>";
      window.splashImagesCd = "<%= image_url('splash-images-cd.svg') %>";
      window.splashImagesCoinbox = "<%= image_url('splash-images-coinbox.svg') %>";
      window.splashImagesController = "<%= image_url('splash-images-controller.svg') %>";
      window.splashImagesHeadset = "<%= image_url('splash-images-headset.svg') %>";
      window.splashImagesLaptop = "<%= image_url('splash-images-laptop.svg') %>";
      window.splashImagesMobile1 = "<%= image_url('splash-images-mobile1.svg') %>";
      window.splashImagesMobile2 = "<%= image_url('splash-images-mobile2.svg') %>";
      window.splashImagesMonitor = "<%= image_url('splash-images-monitor.svg') %>";
      window.splashImagesPotion = "<%= image_url('splash-images-potion.svg') %>";
      window.splashShapesCircle = "<%= image_url('splash-shapes-circle.svg') %>";
      window.splashShapesCross = "<%= image_url('splash-shapes-cross.svg') %>";
      window.splashShapesDot = "<%= image_url('splash-shapes-dot.svg') %>";
      window.splashShapesSquare = "<%= image_url('splash-shapes-square.svg') %>";
      window.splashShapesTriangle = "<%= image_url('splash-shapes-triangle.svg') %>";
      window.loadingIcon = "<%= image_url('loading.gif') %>";
      window.defaultAvatar = "<%= image_url('default-avatar.png') %>";
      window.serverCreateIcon = "<%= image_url('server-create-icon.svg') %>";
      window.serverJoinIcon = "<%= image_url('server-join-icon.svg') %>";
      window.serverJoinBackIcon = "<%= image_url('server-join-back-icon.svg') %>";
      window.serverKeyInvite = "<%= image_url('server-key-invite.svg') %>";
    </script>

    <% if current_user %>
      <script>
        window.currentUser = {
          id: <%= current_user.id %>,
          username: '<%= current_user.username %>',
          usertag : <%= current_user.usertag %>
        }
      </script>
    <% end %>
    <link rel="shortcut icon" type="image/svg" href="<%= image_url('favicon.svg')%>">
  </head>

  <body>
    <%= yield %>
  </body>
</html>
